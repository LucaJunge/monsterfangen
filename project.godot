config_version=4

_global_script_classes=[ {
"base": "Node",
"class": "Monster",
"language": "GDScript",
"path": "res://scripts/Monster.gd"
} ]
_global_script_class_icons={
"Monster": "res://assets/interface/monster.png"
}

[application]

config/name="monsterfangen"
run/main_scene="res://scenes/SceneManager.tscn"
config/icon="res://icon.png"

[autoload]

Rules="*res://globals/Rules.gd"
PlayerData="*res://globals/PlayerData.gd"

[display]

window/size/width=400
window/size/height=800
window/size/test_width=400
window/size/test_height=800
window/handheld/orientation="portrait"
window/stretch/mode="2d"
window/stretch/aspect="expand"

[input]

menu_open={
